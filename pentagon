using Internal;
using System.Text.RegularExpressions;
using System.Dynamic;
using System;

namespace Pentagon
{
    class Pentagon
    {
        public static double Area()
        {
            Console.Write("Enter the value of the s   ");
            double s = Convert.ToDouble(Console.ReadLine());
            double area;
            Area = (5 * MATH.Pow(s2)) / (4 * tan(MATH.PI/5));
            Console.WriteLine("The value of area is {0} ", area);
            return area;
        }
    }
}
